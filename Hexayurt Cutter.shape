// ShapeScript document

detail 32

// for cm
//define unit 10

// for inches
define unit 25.4

// for 9mm snap-off blade
define blade 9

// for 18mm snap-off blade
define blade 18

define handle {
	difference {
		cube {
			size (2.5 * unit) (2.5 * unit) 150
		}
		cube {
			size (2.5 * unit) (2.5 * unit) 150
			position 5 5
		}
	}
}

define bladeSlot {
	option boardThickness unit
	cube {
		position boardThickness
		size 1.5 150 blade
		orientation -0.33 0 0
	}
}

handle {
	position ((2.5 * unit)/2 - 5) ((2.5 * unit)/2 - 5) 
}

bladeSlot {
	boardThickness unit
}
bladeSlot {
	boardThickness (1.5 * unit)
}
bladeSlot {
	boardThickness (2 * unit)
}

